{
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "python -m venv ttsenv"
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "{{os.platform() === 'win32' ? 'env\\\\Scripts\\\\activate' : 'source env/bin/activate'}} ttsenv",
      "on": [{
        "event": null,
        "return": true
      }]
    }
  }, {
    "method": "shell.enter",
    "params": {
      "message": "pip install --verbose TTS"
    }
  }]
}
